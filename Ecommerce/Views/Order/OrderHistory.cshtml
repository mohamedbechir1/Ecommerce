@model List<Ecommerce.Models.Order>

<h2 class="order-history-title">Order History</h2>

<table class="table order-history-table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.Status</td>
                
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        padding: 20px;
    }

    .order-history-title {
        text-align: center;
        font-size: 2rem;
        color: #343a40;
        margin-bottom: 20px;
    }

    .order-history-table {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .order-history-table th,
        .order-history-table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        .order-history-table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

        .order-history-table td {
            font-size: 1rem;
            color: #333;
        }

        .order-history-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .order-history-table tr:hover {
            background-color: #f1f1f1;
        }

        .order-history-table td:last-child,
        .order-history-table th:last-child {
            text-align: right;
        }
</style>
