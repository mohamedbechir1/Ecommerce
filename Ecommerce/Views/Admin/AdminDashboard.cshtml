
<div class="container-fluid h-100">
    
    <div class="row h-100">
        
        <nav class="col-md-3 col-lg-2 sidebar" style="background: linear-gradient(to bottom, #004e92, #000428); position: fixed; height: 100vh; left: 0; top: 0; padding: 0;">
            <div class="d-flex flex-column py-4 h-100">
                <h5 class="text-center text-white mb-4">Admin Panel</h5>
                <ul class="nav flex-column mb-auto">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white d-flex align-items-center gap-2" href="/Admin/ManageUsers" style="transition: all 0.3s;">
                            <i class="fas fa-users"></i> Manage Users
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white d-flex align-items-center gap-2" href="/Admin/ManageProducts" style="transition: all 0.3s;">
                            <i class="fas fa-boxes"></i> Manage Products
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white d-flex align-items-center gap-2" href="/Admin/ManageCategory" style="transition: all 0.3s;">
                            <i class="fas fa-cogs"></i> Manage Categories
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white d-flex align-items-center gap-2" href="/Account/UpdateProfile" style="transition: all 0.3s;">
                            <i class="fas fa-user-edit"></i> Update Profile
                        </a>
                    </li>
                </ul>
                <ul class="nav flex-column mt-auto">
                    <li class="nav-item">
                        <a class="nav-link text-danger d-flex align-items-center gap-2" href="/Account/Logout" style="transition: all 0.3s;">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        
        <main class="col-md-9 ms-auto col-lg-10 px-4 offset-md-3 offset-lg-2" style="padding-top: 20px;">
            <h1>Admin Dashboard</h1>

            
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title">Total Users</h5>
                            <p class="card-text">@ViewBag.TotalUsers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title">Total Products</h5>
                            <p class="card-text">@ViewBag.TotalProducts</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title">Total Categories</h5>
                            <p class="card-text">@ViewBag.TotalCategories</p>
                        </div>
                    </div>
                </div>
            </div>

           
            <h2 class="mt-4">Products</h2>
            @if (ViewBag.Products == null || ViewBag.Products.Count == 0)
            {
                <p>No products available.</p>
            }
            else
            {
                <div class="row mt-3">
                    @foreach (var product in ViewBag.Products)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card" style="width: 100%; height: 350px;">
                                <img src="@product.ImagePath" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text"><strong>Price:</strong> $@product.Price</p>
                                    <p class="card-text"><strong>Quantity:</strong> @product.Quantity</p>
                                    <a href="/Admin/EditProduct/@product.Id" class="btn btn-info btn-sm w-100">
                                        <i class="fas fa-eye"></i> Consult and Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

        </main>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    
    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    
    .main-content {
        padding: 20px;
    }
</style>
