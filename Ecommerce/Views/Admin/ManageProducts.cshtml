@{
    ViewBag.Title = "Manage Products";
}

<h2 class="text-center mt-4">Manage Products</h2>

<div class="container mt-4 p-4 shadow rounded bg-light">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-primary">
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Category</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in ViewBag.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>$@product.Price.ToString("0.00")</td>
                    <td>@product.Quantity</td>
                    <td>@product.Category.Name</td>
                    <td>
                        <img src="@product.ImagePath" class="rounded border" width="50" height="50" />
                    </td>
                    <td>
                        <form asp-action="DeleteProduct" method="post">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-end mt-4">
        <a href="@Url.Action("AddProduct")" class="btn btn-success btn-lg">Add New Product</a>
    </div>
</div>
