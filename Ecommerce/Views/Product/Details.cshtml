@model Ecommerce.Models.Product

<h2>@Model.Name</h2>

<div class="product-detail-container">
    <div class="product-image">
        <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid" />
    </div>
    <div class="product-info">
        <h3>@Model.Price $</h3>
        <p>@Model.Description</p>
        <p><strong>Category:</strong> @Model.Category.Name</p>

        <form action="@Url.Action("AddToCart", "Cart")" method="post">
            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="number" id="quantity" name="quantity" class="form-control" min="1" value="1" required />
            </div>

            <input type="hidden" name="productId" value="@Model.Id" />

            <button type="submit" class="btn btn-primary">Add to Cart</button>
        </form>
    </div>
</div>

<style>
    
    .product-detail-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-top: 20px;
    }

    
    .product-image {
        flex: 1;
        margin-right: 20px;
    }

        .product-image img {
            max-width: 100%;
            height: auto;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

    
    .product-info {
        flex: 2;
    }

        .product-info h3 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 15px;
        }

        .product-info p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .product-info strong {
            font-weight: bold;
        }

    
    .form-group label {
        font-weight: bold;
        font-size: 1rem;
        color: #333;
    }

    .form-control {
        font-size: 1rem;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        margin-top: 5px;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    button[type="submit"] {
        font-size: 1rem;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>
